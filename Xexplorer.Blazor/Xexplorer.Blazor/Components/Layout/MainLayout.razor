@using Xexplorer.Blazor.ViewModels.Layout
@using XExplorer.Core.Modes
@inherits LayoutComponentBase
@* Required *@
@inject MainViewModel mainVM
<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="false" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Cottage"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@mainVM.ToggleDrawer"/>
        <MudText Typo="Typo.h6" Class="ml-3">X Explorer</MudText>
        <MudSpacer/>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="DirEntry" Label="选择目录" @bind-Value="mainVM.SelectedDir">
                @foreach (var dir in mainVM.Dirs)
                {
                    <MudSelectItem Value="dir">@dir.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="ScreenMode" Label="选择尺寸" @bind-Value="mainVM.SelectedMode">
                @foreach (var screen in mainVM.ScrennModes)
                {
                    <MudSelectItem Value="screen">@screen.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="string" Label="选择关键字" @bind-Value="mainVM.SelectedKeyword"
                       ReadOnly="false" Disabled="false" SelectAll="true" SelectAllText="全选"
                       
                       MultiSelection="true" @bind-SelectedValues="mainVM.SelectedKeywords">
                @foreach (var key in mainVM.Keywords)
                {
                    <MudSelectItem Value="key">@key</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-port">
            <MudSelect T="PlayPort" Label="选择端口" @bind-Value="mainVM.SelectedPort">
                @foreach (var port in mainVM.Ports)
                {
                    <MudSelectItem Value="port">@port.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudInputString placeholder="Search..." @bind-Value="mainVM.SelectedKeyword"></MudInputString>
        <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Inherit" OnClick="mainVM.QueryAsync"/>
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit"/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"/>

    </MudAppBar>
    <MudPaper Height="95vh" Style="overflow:hidden; position:relative;">
        <MudDrawerContainer Class="mud-height-full">
            <MudDrawer @bind-Open="@mainVM.Open" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Mini"
                       OverlayAutoClose="true">
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Home
                    </MudNavLink>
                    <MudNavLink Href="/counter" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Counter
                    </MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">Community</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
            <MudPaper>
                @Body
            </MudPaper>
        </MudDrawerContainer>
    </MudPaper>
</MudLayout>
<style>
    .mud-dir {
        min-width: 100px;
        max-width: 150px;
        width: auto;
        margin-bottom: 16px;
    }
    .mud-port {
        min-width: 150px;
        max-width: 200px;
        width: auto;
        margin-bottom: 16px;
    }
</style>