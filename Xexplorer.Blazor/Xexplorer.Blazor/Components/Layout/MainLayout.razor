@using Xexplorer.Blazor.Utils
@using Xexplorer.Blazor.ViewModels.Layout
@using XExplorer.Core.Modes
@inherits LayoutComponentBase
@* Required *@
@inject MainViewModel mainVM
@inject IJSRuntime JS
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="false" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Cottage"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@mainVM.ToggleDrawer"/>
        <MudSpacer/>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="DirEntry" Label="选择目录" @bind-Value="mainVM.SelectedDir">
                @foreach (var dir in mainVM.Dirs)
                {
                    <MudSelectItem Value="dir">@dir.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="ScreenMode" Label="选择尺寸" @bind-Value="mainVM.SelectedMode">
                @foreach (var screen in mainVM.ScrennModes)
                {
                    <MudSelectItem Value="screen">@screen.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-dir">
            <MudSelect T="string" Label="选择关键字" @bind-Value="mainVM.SelectedKeyword"
                       ReadOnly="false" Disabled="false" SelectAll="true" SelectAllText="全选"

                       MultiSelection="true" @bind-SelectedValues="mainVM.SelectedKeywords">
                @foreach (var key in mainVM.Keywords)
                {
                    <MudSelectItem Value="key">@key</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudStack Direction="Row" Justify="Justify.FlexEnd" Class="mud-port">
            <MudSelect T="PlayPort" Label="选择端口" @bind-Value="mainVM.SelectedPort">
                @foreach (var port in mainVM.Ports)
                {
                    <MudSelectItem Value="port">@port.Name</MudSelectItem>
                }
            </MudSelect>
        </MudStack>
        <MudInputString placeholder="Search..." @bind-Value="mainVM.SelectedKeyword"
                        Style="display: none;"></MudInputString>
        <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Inherit"
                       Size="Size.Large" OnClick="@(async () =>
                                                  {
                                                      Scroll("top");
                                                      await mainVM.QueryAsync();
                                                  })"/>
        <MudTooltip Text="播放视频">
            <MudIconButton Icon="@Icons.Material.TwoTone.PlayCircle"
                           OnClick="mainVM.BathPlayAsync"
                           Size="Size.Large" Color="Color.Inherit"/>
        </MudTooltip>
        <MudTooltip Text="结束播放">
            <MudIconButton Icon="@Icons.Material.TwoTone.StopCircle"
                           OnClick="mainVM.StopPlayAsync"
                           Size="Size.Large" Color="Color.Inherit"/>
        </MudTooltip>
        <MudInputLabel>|</MudInputLabel>
        <MudTooltip Text="跳转至底部">
            <MudIconButton Icon="@Icons.Material.Filled.KeyboardDoubleArrowUp"
                           Style="padding-left: 16px;"
                           OnClick="@(() => Scroll("top"))"
                           Size="Size.Medium" Color="Color.Inherit"/>
        </MudTooltip>
        <MudTooltip Text="跳转至中部">
            <MudIconButton Icon="@Icons.Material.Filled.Compress"
                           Style="padding-left: 16px;"
                           OnClick="@(() => Scroll("middle"))"
                           Size="Size.Medium" Color="Color.Inherit"/>
        </MudTooltip>
        <MudTooltip Text="跳转至底部">
            <MudIconButton Icon="@Icons.Material.Filled.KeyboardDoubleArrowDown"
                           Style="padding-left: 16px;"
                           OnClick="@(() => Scroll("bottom"))"
                           Size="Size.Medium" Color="Color.Inherit"/>
        </MudTooltip>
    </MudAppBar>
    <MudPaper Height="93vh" Style="overflow:hidden; position:relative;">
        <MudDrawerContainer Class="mud-height-full">
            <MudDrawer @bind-Open="@mainVM.Open" Anchor="Anchor.Start" Elevation="1" Variant="@DrawerVariant.Mini"
                       OverlayAutoClose="true">
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Home
                    </MudNavLink>
                    <MudNavLink Href="/counter" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Store">Counter
                    </MudNavLink>
                    <MudStack Row="true">
                        <MudTooltip Text="解压缩">
                            <MudIconButton Icon="@Icons.Material.Rounded.FolderZip"
                                           Style="padding-left: 16px;"
                                           OnClick="mainVM.UnzipAsync"
                                           Size="Size.Medium" Color="Color.Inherit"/> 
                        </MudTooltip>
                    </MudStack>
                    <MudStack Row="true">
                        <MudTooltip Text="解析">
                            <MudIconButton Icon="@Icons.Custom.Brands.Slack"
                                           Style="padding-left: 16px;"
                                           OnClick="mainVM.ParseAsync"
                                           Size="Size.Medium" Color="Color.Inherit"/>
                        </MudTooltip> 
                    </MudStack>
                    <MudStack Row="true">
                        <MudTooltip Text="MD5计算">
                            <MudIconButton Icon="@Icons.Material.TwoTone.QrCodeScanner"
                                           Style="padding-left: 16px;"
                                           OnClick="mainVM.CalcMd5Async"
                                           Size="Size.Medium" Color="Color.Inherit"/>
                        </MudTooltip> 
                    </MudStack>
                    <MudStack Row="true">
                        <MudTooltip Text="重复查询">
                            <MudIconButton Icon="@Icons.Material.Filled.QueryStats"
                                           Style="padding-left: 16px;"
                                           OnClick="mainVM.QueryDuplicatesAsync"
                                           Size="Size.Medium" Color="Color.Inherit"/>
                        </MudTooltip> 
                    </MudStack>
                </MudNavMenu>
            </MudDrawer>
            <MudPaper>
                @Body
            </MudPaper>
        </MudDrawerContainer>
        <MudOverlay Visible="@DialogUtils.Visible" DarkBackground="true" Absolute="true">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudOverlay>
    </MudPaper>
</MudLayout>
<style>
    .mud-dir {
        min-width: 100px;
        max-width: 150px;
        width: auto;
        margin-bottom: 16px;
    }

    .mud-port {
        min-width: 150px;
        max-width: 200px;
        width: auto;
        margin-bottom: 16px;
    }
</style>
<script>
    window.scrollUtil = {
        scroll: function (elementId, position) {
            const el = document.getElementById(elementId);
            if (!el) return;

            if (position === 'top') el.scrollTop = 0;
            else if (position === 'bottom') el.scrollTop = el.scrollHeight;
            else if (position === 'middle') el.scrollTop = el.scrollHeight / 2;
        }
    };
</script>

@code {
  
    protected override void OnInitialized()
    {
        DialogUtils.Service = DialogService;
        SnackbarUtils.Snackbar = Snackbar;
    } 

    private async Task Scroll(string pos)
    {
        // 通过 C# 调用 JS
        await JS.InvokeVoidAsync("scrollUtil.scroll", "main-container", pos);
    }

}